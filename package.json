{
  "name": "video-mcp",
  "version": "1.0.0",
  "description": "Video processing MCP server with Tencent Cloud AI integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "example": "tsx src/examples.ts",
    "test:local": "tsx src/local-test.ts",
    "test:video": "tsx test/video-analysis-test.ts",
    "test:auth": "tsx test/auth-test.ts",
    "setup": "node start.js",
    "clean": "rm -rf dist temp_frames temp_test_frames"
  },
  "keywords": ["mcp", "video", "processing", "tencent", "ai"],
  "author": "pickstar-2002",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "fluent-ffmpeg": "^2.1.2",
    "node-fetch": "^3.3.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fluent-ffmpeg": "^2.1.24",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  },
  "bin": {
    "video-mcp": "./dist/index.js"
  }
}
